<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Trả nợ"
        android:textColor="@color/color_iMenu"
        android:textSize="30dip"
        android:textStyle="bold|italic" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="10dp"
        android:background="@color/color_iMenu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Số tiền"
            android:textSize="23dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_trano_sotien"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10.000.000 VND"
            android:textColor="@color/color_spend"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Đã trả"
            android:textSize="23dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Trano_daTra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2.000.000 VND"
            android:textColor="@color/color_spend"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnTra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#1E88E5"
        android:text="Trả" />


</LinearLayout>
